    <plugins>
      <plugin>
				<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.10.1</version>
        <configuration>
          <release>17</release>
        </configuration>
      </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.2.2</version>
				<configuration>
					<archive>
						<manifest>
              <addClasspath>true</addClasspath>
							<mainClass>norman.tools.tlv2xml</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
      <!--plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.6</version>
      </plugin-->
      <plugin>
				<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.4.1</version>
        <configuration>
          <descriptors>
            <descriptor>src/assemblies/tlvdef.xml</descriptor>
            <descriptor>src/assemblies/cli.xml</descriptor>
          </descriptors>
          <archive>
            <manifest>
              <mainClass>norman.tools.tlv2xml</mainClass>
            </manifest>
          </archive>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id> <!-- this is used for inheritance merges -->
            <phase>package</phase> <!-- bind to the packaging phase -->
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
       </plugin>
      <!--plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
